{
  "name": "contract-generator-desktop",
  "version": "1.0.0",
  "description": "Desktop application for generating contracts from templates",
  "author": "Contract Generator Team",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "build:portable": "npm run build && electron-builder --win portable",
    "build:zip": "npm run build && electron-builder --win zip",
    "build:nsis": "npm run build && electron-builder --win nsis",
    "build:squirrel": "npm run build && electron-builder --win squirrel",
    "build:all-win": "npm run build && electron-builder --win portable --win zip --win nsis"
  },
  "build": {
    "appId": "com.contractgenerator.desktop",
    "productName": "Contract Generator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Contract Generator",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "rfc3161TimeStampServer": "http://timestamp.digicert.com"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Contract Generator",
      "allowElevation": true,
      "runAfterFinish": true,
      "menuCategory": true,
      "include": "installer.nsh",
      "warningsAsErrors": false
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  },
  "dependencies": {
    "docxtemplater": "^3.37.0",
    "lucide-react": "^0.263.1",
    "mammoth": "^1.6.0",
    "pizzip": "^3.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.21",
    "react-scripts": "5.0.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
